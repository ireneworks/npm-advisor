{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "#types/*": [
        "@types/*"
      ],
      "#apis/*": [
        "apis/*"
      ],
      "#components/*": [
        "components/*"
      ],
      "#hooks/*": [
        "hooks/*"
      ],
      "#lib/*": [
        "lib/*"
      ],
      "#pages/*": [
        "pages/*"
      ],
      "#helpers/*": [
        "helpers/*"
      ],
      "#constants/*": [
        "constants/*"
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}